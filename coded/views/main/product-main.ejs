<% layout('layout') -%>

<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">welcome to codedschools.ng</h1>
    <h3>Brows. Select School. Enroll</h3>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
        <div class="input-group col-md-12">
            <input type="text" id="search" class="form-control input-lg" name="search_term" placeholder="search for your coded school...">
            <span class="input-group-btn">
            <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-search"></i></button>
            </span>
        </div>
        </div>
    </div>
    <!-- <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more &raquo;</a></p> -->
  </div>
</div>
<div class = "container">
    <div id="searchResults" class ="row">
        <% for (var i = 0; i < products.length; i ++){%>
        <div class="col-md-4">
        <a href="/product/<%=products[i]._id %>">
            <div class="thumbnail">
                <img src="<%=products[i].image %>">
                <h3><%= products[i].name%></h3>
                <p><%=products[i].category.name%></p>
                <p><%=products[i].intro%></p>
                <p><%=products[i].website%></p>
            </div>
        </a>
        </div>
        <%}%>

        <ul class="pagination text-center">
            <li>
                <%for(var i = 1; i <= pages; i++){%>
                    <% if(i === 1) {%>
                        <li><a href="/"><%= i %></a></li>
                    <%}else{%>
                        <li><a href="/page/<%=i %>"<%= i %></a></li>
                    <%}%>
                <%}%>
            </li>
        </ul>
    </div>
</div>